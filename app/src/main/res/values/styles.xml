<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CategoryButton">
        <item name="android:layout_width">@dimen/category_button_width</item>
        <item name="android:layout_height">@dimen/category_button_height</item>
    </style>

    <style name="AnswerButton">
        <item name="android:layout_width">@dimen/answer_button_width</item>
        <item name="android:layout_height">@dimen/answer_button_height</item>
        <item name="android:layout_marginTop">@dimen/answer_button_top_margin</item>
    </style>

</resources>
